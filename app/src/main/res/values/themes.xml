<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:spinnerItemStyle">@style/DefautTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/DefautTextStyle</item>
    </style>

    <!-- Creer le composant titre par defaut -->
    <style name="DefautTextStyle">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/Kanit</item>
    </style>

    <!-- Creer le composant titre par defaut -->
    <style name="SubtitleTextStyle" parent="DefautTextStyle">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Creer le composant titre par defaut -->
    <style name="TitleTextStyle" parent="SubtitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Personnaliser la barre de navigation -->
    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/Kanit</item>
    </style>
</resources>